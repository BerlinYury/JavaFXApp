<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxapp.ControllerClient">
    <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
    </padding>
    <Button text="EXIT" onAction="#exit" focusTraversable="false" minWidth="130.0" />
    <TextArea fx:id="areaText" VBox.vgrow="ALWAYS" editable="false" focusTraversable="false" />
    <HBox>
        <TextField fx:id="fieldText" HBox.hgrow="ALWAYS"  onAction="#sendButtonClick" />
        <Button fx:id="buttonSend" text="Send" onAction="#sendButtonClick" minWidth="130.0" />
    </HBox>
</VBox>
